<%= render 'admins/list' %>

<h1> 商品一覧</h1>

<table>
  <thead>
  	<tr>
  	  <th>CDタイトル</th>
  	  <th colspan="3"></th>
  	</tr>
  </thead>

  <tboby>
	<% @products.each do |product| %>
	  <tr>
	  	<td>
	  		<%= attachment_image_tag product, :product_image, :fill, 100, 100 %><br>
	  		<%= product.cd_title %>
	  	</td>
	  	<td>
	  	  <%= link_to "商品の詳細" , admins_product_path(product) %>
	  	</td>
	  	<td>
	  	  <%= link_to "商品の編集" , edit_admins_product_path(product) %>
	  	</td>
	  	<td>
	  	  <%= link_to "商品の削除" , admins_product_path(product),
	  	  method: :delete, "data-confirm" => "本当に削除しますか？" %>
	  	</td>
	  </tr>
	<% end %>
  </tboby>
</table>


